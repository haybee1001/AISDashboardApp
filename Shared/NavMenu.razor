<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Incidence DashboardApp</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="report">
                <span class="oi oi-magnifying-glass" aria-hidden="true"></span> Reported Incidence
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="analysischart">
                <span class="oi oi-graph" aria-hidden="true"></span> Analysis
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="taskallocation">
                <span class="oi oi-task" aria-hidden="true"></span> Task Allocation
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="issue">
                <span class="oi oi-layers" aria-hidden="true"></span> Issue Tickets
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="dtable">
                <span class="oi oi-map" aria-hidden="true"></span> Map View
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="#">
                <span class="oi oi-account-logout" aria-hidden="true"></span> Sign Out 
            </NavLink>
        </li>

    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
